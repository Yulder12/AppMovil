<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="700dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <!-- Header Card -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:elevation="8dp"
            android:paddingHorizontal="32dp"
            android:paddingVertical="40dp"
            android:layout_marginBottom="24dp">

            <View
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:background="#2196F3"
                android:elevation="4dp" />

            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Nombre del Software"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Versión 1.0.0"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:background="#2196F3"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Description Card -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:padding="28dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical">

                <View
                    android:layout_width="5dp"
                    android:layout_height="28dp"
                    android:background="#2196F3"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descripción"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción detallada del software."
                android:textSize="18sp"
                android:textColor="#666666"
                android:lineSpacingMultiplier="1.4" />
        </LinearLayout>

        <!-- Developer Info Card -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:padding="28dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical">

                <View
                    android:layout_width="5dp"
                    android:layout_height="28dp"
                    android:background="#4CAF50"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Desarrollador"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvAutor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del Desarrollador"
                android:textSize="18sp"
                android:textColor="#666666"
                android:layout_marginBottom="20dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="?android:selectableItemBackground"
                android:padding="10dp">

                <View
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="#FF9800"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/tvLinkContacto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="contacto@ejemplo.com"
                    android:textSize="18sp"
                    android:textColor="#2196F3"
                    android:autoLink="email" />
            </LinearLayout>
        </LinearLayout>

        <!-- Action Button -->
        <Button
            android:id="@+id/btnCompartir"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="COMPARTIR"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="#2196F3"
            android:elevation="8dp"
            android:layout_marginBottom="24dp" />

        <!-- Footer -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="© 2025 - Todos los derechos reservados"
            android:textSize="14sp"
            android:textColor="#999999"
            android:paddingVertical="24dp" />

    </LinearLayout>
</ScrollView>

