<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header Card -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:elevation="8dp"
            android:paddingHorizontal="24dp"
            android:paddingVertical="32dp"
            android:layout_marginBottom="16dp">

            <!-- App Icon Placeholder -->
            <View
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:background="#2196F3"
                android:elevation="4dp" />

            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Nombre del Software"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Versión 1.0.0"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:background="#2196F3"
                android:paddingHorizontal="16dp"
                android:paddingVertical="6dp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Description Card -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">

                <View
                    android:layout_width="4dp"
                    android:layout_height="24dp"
                    android:background="#2196F3"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descripción"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción completa del software que explica las funcionalidades principales y el propósito de la aplicación de manera clara y concisa para el usuario."
                android:textSize="16sp"
                android:textColor="#666666"
                android:lineSpacingMultiplier="1.4" />

        </LinearLayout>

        <!-- Developer Info Card -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">

                <View
                    android:layout_width="4dp"
                    android:layout_height="24dp"
                    android:background="#4CAF50"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Desarrollador"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvAutor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del Desarrollador"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="?android:selectableItemBackground"
                android:padding="8dp">

                <View
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="#FF9800"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/tvLinkContacto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="contacto@ejemplo.com"
                    android:textSize="16sp"
                    android:textColor="#2196F3"
                    android:autoLink="email" />

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnCompartir"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="COMPARTIR"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="#2196F3"
                android:elevation="6dp" />

        </LinearLayout>

        <!-- Footer -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="© 2025 - Todos los derechos reservados"
                android:textSize="13sp"
                android:textColor="#999999" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>